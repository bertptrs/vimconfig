[core]
	pager = less -x4 -F -X
	editor = vim
	excludesfile = ~/.config/git/ignore

[user]
	name = Bert Peters
	email = bert@bertptrs.nl

[color]
	ui = auto

[log]
	abbrevCommit = true
	follow = true

[commit]
	verbose = true

[push]
	default = simple

[merge]
	tool = vimdiff

[help]
	autocorrect = 10

[pull]
	rebase = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[alias]
	cp = cherry-pick
	autosquash = rebase -i --autosquash
	pushf = push --force-with-lease
[rebase]
	autosquash = true
[fetch]
	prune = true
